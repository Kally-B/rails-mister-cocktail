<%= render "navbar" %>
<div class="container">
  <h1><%= @cocktail.name %></h1>

  <ul>
    <% @doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to "✖︎", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
  </ul>
  <br>
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
  <br>
  <%= link_to "Back", cocktails_path, class: "btn btn-info mt-3"  %>
</div>
